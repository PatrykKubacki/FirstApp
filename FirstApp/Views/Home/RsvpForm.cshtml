@model FirstApp.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<title>RsvpForm</title>
<link rel="stylesheet" href="~/Content/bootstrap.css"/>
<link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
<link type="text/css" rel="stylesheet" href="~/Content/Style.css">
	<style>
		body {background-color: #f1f1f1}
	</style>
</head>
<body>
<div class="panel panel-success">
	<div class="panel-heading"><h4>Prosze odpowiedzieć, to pilne!</h4></div>
	<div class="panel-body">
		@using (Html.BeginForm()) {
			@Html.ValidationSummary()
			<div class="form-group">
				<label>imie </label>
				<div>
					@Html.TextBoxFor(x => x.Name, new {@class="form-control"})
				</div>
			</div>

			<div class="form-group">
				<label>Email </label>
				<div>
					@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				<label>Phone </label>
				<div>
					@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				<p>czy sie pojawisz?</p>
				<div>
					@Html.DropDownListFor(x => x.WillAttend, new[] {
						new SelectListItem { Text = "Tak bede", Value = bool.TrueString },
						new SelectListItem { Text = "sorki nie", Value = bool.FalseString },
					}, "Odpowiedz", new { @class = "form-control" })
				</div>
			</div>
			<input class="btn btn-success" type="submit" value="Odpowiadam"/>
		}
	</div>
</div>
</body>
</html>
